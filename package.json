{
  "name": "discord-notify",
  "version": "1.0.0",
  "type": "module",
  "description": "CLI + daemon for bidirectional Discord DM communication with Claude agents",
  "bin": {
    "discord-notify": "./dist/cli/index.js",
    "discord-notify-daemon": "./dist/daemon/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/daemon/index.ts",
    "dev:cli": "tsx src/cli/index.ts",
    "build": "tsc",
    "start": "node dist/daemon/index.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "discord.js": "^14.14.0",
    "dotenv": "^16.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
